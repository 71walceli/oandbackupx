<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Label" parent="TextAppearance.AppCompat.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Secondary" parent="TextAppearance.AppCompat.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/secondary_text</item>
    </style>

    <style name="TextAppearance.SearchBar" parent="TextAppearance.AppCompat.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Medium">
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:strokeColor</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.050</item>
    </style>

</resources>