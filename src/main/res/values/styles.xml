<resources>

    <!-- Style for a list items -->
    <style name="itemFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:padding">@dimen/cards_margin</item>
    </style>

    <style name="mainTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/card_rc15</item>
        <item name="android:backgroundTint">@color/tan_background</item>
    </style>

    <style name="mainBarView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bar_rc15</item>
        <item name="android:backgroundTint">@color/tan_background</item>
    </style>

    <style name="roundedButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/card_rc15</item>
    </style>

</resources>
